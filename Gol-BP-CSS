<script>
//DO NOT EDIT BELOW THIS POINT
function hideBox(id) {
 console.log(id)
 // get button object
 const targetButton = document.getElementById(id + "Box");
 // get textArea object
 const targetArea = document.getElementById(id)
 // if the area is hidden, display it.
 if (targetArea.style.display === "none") {
   targetArea.style.display = "block";
   //change color to yellow
   targetButton.style.color = "yellow";
   //if stats are displayed, hide them.
 } else {
   targetArea.style.display = "none";
   //change color to white
   targetButton.style.color = "#fff";
 }
}

function autoHide(id, limit) {
 const text = document.getElementById(id + "Text").innerHTML;
 const button = document.getElementById(id + "Box")
 //if characters in section is fewer than default entry, hide section
 if (text.length < limit) {
 document.getElementById(id).style.display = "none";
  //change color to white
  button.style.color = "#fff";
 }
}
autoHide('passive',110)
autoHide('limit',210)
autoHide('form',350)
autoHide('link',770)
autoHide('finisher',180)
autoHide('reserve',330)



</script>


